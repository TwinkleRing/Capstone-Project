<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_under_border"
    android:orientation="vertical"
    android:id="@+id/lay_lecture"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <LinearLayout
        android:id="@+id/ll_lecture_item_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lay_lecture_info"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:layout_marginVertical="15dp">

            <ImageView
                android:id="@+id/btn_clock"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/alarm_clock2" />

            <TextView
                android:id="@+id/txt_lecture_item_list_className"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:layout_weight="8"
                android:text="강의명"
                android:textSize="30dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay1"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_lecture_item_list_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="00:00 AM"
            android:textSize="20dp"/>

        <CheckBox
            android:id="@+id/btn_check1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:buttonTint="#90caf9"
            android:src="@drawable/check"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay2"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_lecture_item_list_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="7"
            android:layout_gravity="center_vertical"
            android:text="00:00 AM"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/btn_check2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:buttonTint="#90caf9"
            android:src="@drawable/check"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay3"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_lecture_item_list_time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="00:00 AM"
            android:textSize="20dp"/>

        <CheckBox
            android:id="@+id/btn_check3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:buttonTint="#90caf9"
            android:src="@drawable/check"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay4"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_lecture_item_list_time4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="00:00 AM"
            android:textSize="20dp"/>

        <CheckBox
            android:id="@+id/btn_check4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:buttonTint="#90caf9"
            android:src="@drawable/check"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay5"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_lecture_item_list_time5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="00:00 AM"
            android:textSize="20dp"/>

        <CheckBox
            android:id="@+id/btn_check5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:buttonTint="#90caf9"
            android:src="@drawable/check"/>
    </LinearLayout>
</LinearLayout>