<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <HorizontalScrollView
        android:id="@+id/class_select_filter_scrollview"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/class_select_filter_major_btn"
                android:layout_width="wrap_content"
                android:padding="7dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/class_select_filter_border">
                <TextView
                    android:id="@+id/class_select_filter_major_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전공/영역:"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/class_select_filter_major_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintStart_toEndOf="@id/class_select_filter_major_tv"
                    app:layout_constraintTop_toTopOf="@id/class_select_filter_major_tv"
                    app:layout_constraintBottom_toBottomOf="@id/class_select_filter_major_tv"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/class_select_filter_keyword_btn"
                android:layout_width="wrap_content"
                android:padding="7dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:background="@drawable/class_select_filter_border">
                <TextView
                    android:id="@+id/class_select_filter_keyword_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="검색어:"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/class_select_filter_keyword_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="없음"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintStart_toEndOf="@id/class_select_filter_keyword_tv"
                    app:layout_constraintTop_toTopOf="@id/class_select_filter_keyword_tv"
                    app:layout_constraintBottom_toBottomOf="@id/class_select_filter_keyword_tv"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/class_select_filter_allign_btn"
                android:layout_width="wrap_content"
                android:padding="7dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:background="@drawable/class_select_filter_border">
                <TextView
                    android:id="@+id/class_select_filter_allign_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정렬:"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/class_select_filter_allign_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기본"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintStart_toEndOf="@id/class_select_filter_allign_tv"
                    app:layout_constraintTop_toTopOf="@id/class_select_filter_allign_tv"
                    app:layout_constraintBottom_toBottomOf="@id/class_select_filter_allign_tv"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/class_select_filter_time_btn"
                android:layout_width="wrap_content"
                android:padding="7dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:background="@drawable/class_select_filter_border">
                <TextView
                    android:id="@+id/class_select_filter_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간:"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/class_select_filter_time_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintStart_toEndOf="@id/class_select_filter_time_tv"
                    app:layout_constraintTop_toTopOf="@id/class_select_filter_time_tv"
                    app:layout_constraintBottom_toBottomOf="@id/class_select_filter_time_tv"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/class_select_filter_category_btn"
                android:layout_width="wrap_content"
                android:padding="7dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:background="@drawable/class_select_filter_border">
                <TextView
                    android:id="@+id/class_select_filter_category_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구분:"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/class_select_filter_category_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintStart_toEndOf="@id/class_select_filter_category_tv"
                    app:layout_constraintTop_toTopOf="@id/class_select_filter_category_tv"
                    app:layout_constraintBottom_toBottomOf="@id/class_select_filter_category_tv"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/class_select_filter_grade_btn"
                android:layout_width="wrap_content"
                android:padding="7dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:background="@drawable/class_select_filter_border">
                <TextView
                    android:id="@+id/class_select_filter_grade_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="학점:"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/class_select_filter_grade_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintStart_toEndOf="@id/class_select_filter_grade_tv"
                    app:layout_constraintTop_toTopOf="@id/class_select_filter_grade_tv"
                    app:layout_constraintBottom_toBottomOf="@id/class_select_filter_grade_tv"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/class_select_nestedScrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/class_select_filter_scrollview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/class_select_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:background="@color/white"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>